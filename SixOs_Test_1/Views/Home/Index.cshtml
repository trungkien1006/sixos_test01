<div id="overlay" class="fixed inset-0 flex items-center justify-center z-[5] hidden bg-[rgba(107,114,128,0.5)]">
    <div class="container px-48">
        <div id="modal" class="relative z-[10]">
            <div id="closeBtn" class="absolute right-2 top-2 cursor-pointer hover:opacity-[0.8] duration-300 hover:duration-300">
                <i class="fa-solid fa-xmark fa-2x"></i>
            </div>
            <div class="w-full mx-auto bg-white p-8 rounded-lg shadow">
                <h2 class="text-2xl font-bold text-center pb-8">Thêm sinh viên</h2>
                <form id="studentForm">
                    <div class="flex space-x-8 w-full">
                        <div class="space-y-6 w-1/2">
                            <!-- Student ID -->
                            <div>
                                <label for="studentId" class="block text-sm font-medium text-gray-700">
                                    Mã sinh viên
                                </label>
                                <input type="text" id="studentId" name="studentId" autocomplete="off"
                                       class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm
                                  focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                                <p id="studentIdError" class="error-field mt-1 text-sm text-red-600 hidden"></p>
                            </div>

                            <!-- Student Name -->
                            <div>
                                <label for="studentName" class="block text-sm font-medium text-gray-700">
                                    Tên sinh viên
                                </label>
                                <input type="text" id="studentName" name="studentName" autocomplete="off"
                                       class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm
                                  focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                                <p id="studentNameError" class="error-field mt-1 text-sm text-red-600 hidden"></p>
                            </div>

                              <!-- Province Dropdown -->
                            <div>
                                <label for="province" class="block text-sm font-medium text-gray-700">
                                    Tỉnh/Thành phố
                                </label>
                                <div class="dropdown-container relative" id="provinceContainer">
                                    <input type="text" id="provinceInput" placeholder="Chọn tỉnh/thành phố" autocomplete="off"
                                           class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm
                                      focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                                    <div class="absolute inset-y-0 right-0 flex items-center pr-2 pointer-events-none mt-1">
                                        <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg"
                                             viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd"
                                                  d="M5.293 7.293a1 1 0 011.414 0L10
                                      10.586l3.293-3.293a1 1 0 111.414
                                      1.414l-4 4a1 1 0 01-1.414
                                      0l-4-4a1 1 0 010-1.414z"
                                                  clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <input class="input-field" type="hidden" id="province" name="province">
                                    <div id="provinceDropdown" class="dropdown-list hidden"></div>
                                </div>
                                <p id="provinceInputError" class="error-field mt-1 text-sm text-red-600 hidden"></p>
                            </div>

                            <!-- District Dropdown -->
                            <div>
                                <label for="district" class="block text-sm font-medium text-gray-700">
                                    Quận/Huyện
                                </label>
                                <div class="dropdown-container relative" id="districtContainer">
                                    <input type="text" id="districtInput" placeholder="Chọn quận/huyện" disabled autocomplete="off"
