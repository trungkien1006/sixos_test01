<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SixOs_Test_1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SixOs_Test_1.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
    <link href="~/css/output.css" rel="stylesheet">
    <style>
        /* Ẩn icon lịch cho trình duyệt WebKit */
        input[type="date"]::-webkit-calendar-picker-indicator {
            opacity: 0;
            display: none;
        }

        /* Ẩn mũi tên chọn ngày (nếu có) */
        input[type="date"]::-webkit-inner-spin-button {
            display: none;
        }

        input[type="date"]::-webkit-clear-button {
            display: none;
        }
    </style>
</head>
<body class="bg-gray-50">
    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/numberFormat.js"></script>
    <script src="~/js/handleDate.js"></script>
    <script src="~/js/dateUtils.js"></script>
    <script src="~/js/validation.js"></script>
    <script src="~/js/datePicker.js"></script>
    <script src="~/js/searchableDropdown.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>
